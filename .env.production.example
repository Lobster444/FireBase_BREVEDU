# Production Environment Configuration
# Copy this file to .env.production for production deployment

# =============================================================================
# PRODUCTION ENVIRONMENT
# =============================================================================
NODE_ENV=production
VITE_APP_ENV=production

# Production URLs
# CRITICAL: Set this to your actual production domain for email verification to work
# This domain MUST be added to Firebase Console > Authentication > Settings > Authorized Domains
VITE_APP_URL=https://your-production-domain.com
VITE_API_URL=https://your-domain.com/api

# IMPORTANT: Replace "your-production-domain.com" with your actual domain
# Then whitelist it in Firebase Authorized Domains or email verification will fail

# =============================================================================
# PRODUCTION TAVUS SETTINGS
# =============================================================================
# Production Tavus credentials
TAVUS_API_KEY=your_production_tavus_api_key
TAVUS_DEFAULT_TTL=3600
TAVUS_MAX_RETRIES=3

# Production feature flags
ENABLE_TAVUS_CONFIRMATION=true
TAVUS_TTL_ENABLED=true
TAVUS_OFFLINE_QUEUE=true

# =============================================================================
# PRODUCTION SECURITY
# =============================================================================
# Disable debug features
VITE_DEBUG_MODE=false
VITE_CONSOLE_LOGGING=false
VITE_ANALYTICS_DEBUG=false
VITE_SHOW_DEV_TOOLS=false

# Enable production security features
VITE_REQUIRE_STRONG_PASSWORDS=true
VITE_SESSION_TIMEOUT=1800000

# =============================================================================
# PRODUCTION PAYMENTS
# =============================================================================
# Live Stripe keys
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_key
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret

# Disable payment mocking
VITE_MOCK_PAYMENTS=false

# =============================================================================
# PRODUCTION MONITORING
# =============================================================================
# Enable all monitoring
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.05

# Error tracking
VITE_SENTRY_DSN=your_production_sentry_dsn

# =============================================================================
# PRODUCTION OPTIMIZATION
# =============================================================================
# Enable caching and optimization
VITE_CACHE_DURATION=86400
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_WEBP=true
VITE_LAZY_LOADING=true

# CDN Configuration
VITE_CDN_URL=https://your-cdn-domain.com

# =============================================================================
# PRODUCTION SUPPORT
# =============================================================================
# Live support integrations
VITE_INTERCOM_APP_ID=your_live_intercom_app_id
VITE_SUPPORT_EMAIL=support@your-domain.com

# Social media
VITE_TWITTER_HANDLE=@your_handle
VITE_FACEBOOK_PAGE=your_page
VITE_LINKEDIN_COMPANY=your_company