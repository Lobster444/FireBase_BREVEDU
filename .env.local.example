# Local Development Environment
# Copy this file to .env.local for local development overrides

# =============================================================================
# LOCAL DEVELOPMENT OVERRIDES
# =============================================================================
NODE_ENV=development
VITE_APP_ENV=development

# Local URLs
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:5173/api

# =============================================================================
# TAVUS DEVELOPMENT SETTINGS
# =============================================================================
# Use test/development Tavus credentials
TAVUS_API_KEY=your_test_tavus_api_key
TAVUS_DEFAULT_TTL=180
TAVUS_MAX_RETRIES=2

# Enable all Tavus features for testing
ENABLE_TAVUS_CONFIRMATION=true
TAVUS_TTL_ENABLED=true
TAVUS_OFFLINE_QUEUE=true

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================
VITE_DEBUG_MODE=true
VITE_CONSOLE_LOGGING=true
VITE_ANALYTICS_DEBUG=true
VITE_SHOW_DEV_TOOLS=true

# Mock external services for development
VITE_MOCK_PAYMENTS=true
VITE_MOCK_EMAIL_SERVICE=true

# =============================================================================
# LOCAL FIREBASE EMULATORS (Optional)
# =============================================================================
# Uncomment to use Firebase emulators
# VITE_USE_FIREBASE_EMULATORS=true
# VITE_FIRESTORE_EMULATOR_HOST=localhost:8080
# VITE_AUTH_EMULATOR_HOST=localhost:9099
# VITE_STORAGE_EMULATOR_HOST=localhost:9199

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test user credentials
VITE_TEST_USER_EMAIL=test@brevedu.com
VITE_TEST_USER_PASSWORD=testpassword123
VITE_TEST_ADMIN_EMAIL=admin@brevedu.com

# Test course IDs
VITE_TEST_COURSE_ID=test-course-123
VITE_TEST_PREMIUM_COURSE_ID=test-premium-course-456